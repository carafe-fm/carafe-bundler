{
    "$id": "https://carafe.fm/schema/draft-02/meta.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "about": {
            "type": "string",
            "minLength": 1
        },
        "bookend": {
            "type": "string",
            "minLength": 2
        },
        "jsApiMethods": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "callback": {
                        "type": "boolean"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": [
                    "callback",
                    "description"
                ]
            }
        },
        "category": {
            "type": "string",
            "minLength": 1
        },
        "creator": {
            "type": "string",
            "minLength": 1
        },
        "creatorAcknowlegements": {
            "type": "string"
        },
        "parentBundle": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "pattern": "^((\\d+)\\.(\\d+)\\.(\\d+)?)$",
                    "errorMessage": "must be MAJOR.MINOR.PATCH semver format"
                },
                "creator": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "version",
                "creator"
            ]
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "id": {
            "type": "string",
            "format": "uuid",
            "errorMessage": "id must be a valid UUID"
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "offlineCompatible": {
            "type": "boolean"
        },
        "previewType": {
            "type": "string",
            "enum": [
                "jpg",
                "png"
            ],
            "errorMessage": "supported preview types are jpg and png"
        },
        "references": {
            "type": "object",
            "additionalProperties": {
                "type": "string",
                "format": "uri",
                "errorMessage": "value must be a valid URI"
            }
        },
        "urlLocation": {
            "type": "string",
            "format": "uri",
            "errorMessage": "value must be a valid URI"
        },
        "vendors": {
            "type": "object",
            "additionalProperties": {
                "type": "object"
            }
        },
        "version": {
            "type": "string",
            "pattern": "^((\\d+)\\.(\\d+)\\.(\\d+)?)$",
            "errorMessage": "must be MAJOR.MINOR.PATCH semver format"
        },
        "windowsTested": {
            "type": "boolean"
        }
    },
    "required": [
        "about",
        "bookend",
        "jsApiMethods",
        "category",
        "creator",
        "description",
        "id",
        "name",
        "offlineCompatible",
        "references",
        "version",
        "windowsTested"
    ]
}
